doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='UNCOVER TRUTH Inc.')
    title USERDIVE examples
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', integrity='sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    block loader
  body
    a(href='https://github.com/uncovertruth/examples')
      img(style='position: absolute; top: 0; right: 0; border: 0; z-index: 2000;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png', alt='Fork me on GitHub')
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') USERDIVE Integration example
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='http://docs.userdive.com') Document
            li
              a(id='about', href='#about') About
    .container
      .well
        .row
          block content
      .well
        .row
          form(action='#')
            .form-group
              label.col-sm-2.control-label(for='email') Email adress
              .col-sm-10
                input.form-controll.container-fluid.form-control(type='email', placeholder='foo@uncovertruth.jp')
            .form-group
              label.col-sm-2.control-label(for='password') Password
              .col-sm-10
                input.form-controll.container-fluid.form-control(type='password', placeholder='password')
            label.col-sm-2.control-label radio
            .col-sm-10
              .radio
                label.radio-inline
                  input(type='radio', name='optionsRadios', value='but', checked)
                  | default
                label.radio-inline
                  input(type='radio', name='optionsRadios', value='but')
                  | sub
            label.col-sm-2.control-label disable
            .col-sm-10
              .radio.disabled
                label.radio-inline
                  input(type='radio', name='optionsRadios', value='but', disabled)
                  | example
            .form-group
              label.col-sm-2.control-label selecter
              .col-sm-10
                select.form-control
                  option example1
                  option example2
            label.col-sm-2.control-label checkbox
            .col-sm-10
              label.checkbox-inline
                input(type='checkbox')
                | sub
              label.checkbox-inline
                input(type='checkbox')
                | sub2
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn(type='submit') Submit
    block footer_content
