{
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/userdive/agent.js/issues"
  },
  "devDependencies": {
    "@uncovertruth/eslint-config": "^3.4.0",
    "@uncovertruth/eslint-config-react": "^0.3.0",
    "@uncovertruth/stylelint-config": "^0.10.0",
    "@uncovertruth/tslint-config": "^1.3.0",
    "chromedriver": "^2.35.0",
    "codecov": "^3.0.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.1",
    "fixpack": "^2.3.1",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "nightwatch": "^0.9.19",
    "npm-run-all": "^4.1.2",
    "prettier-eslint-cli": "^4.7.1",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.5.0",
    "pug-lint-config-uncovertruth": "^0.0.2",
    "rimraf": "^2.6.2",
    "selenium-server-standalone-jar": "^3.8.1",
    "size-limit": "^0.14.1",
    "stylelint": "^9.1.0",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0",
    "uglify-js": "^3.3.11",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  },
  "engine": {
    "node": "> 5"
  },
  "homepage": "https://github.com/userdive/agent.js#readme",
  "keywords": [
    "userdive"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "tslint --fix",
      "tslint",
      "git add"
    ],
    "*.tsx": [
      "prettier-eslint --eslint-config-path ./website/.eslintrc.json --write",
      "tslint --fix -c ./examples/tslint.json",
      "tslint -c ./examples/tslint.json",
      "git add"
    ],
    "website/**/*.js": [
      "prettier-eslint --eslint-config-path ./website/.eslintrc.json --write",
      "eslint ./website/.eslintrc.json",
      "git add"
    ],
    "*.pug": [
      "pug-lint"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/userdive/agent.js.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:cdn": "webpack --env=production && size-limit && find cdn -type f | grep -v js | xargs rm",
    "build:examplejs": "cd examples && webpack",
    "build:examples": "pug examples -o examples/build -P -s",
    "build:packages": "lerna run build",
    "build:website": "cd website && yarn build",
    "bump": "npm run publish -- --skip-npm",
    "ci:sauce": "cross-env CI_MODE=sauce lerna run test",
    "clean": "lerna clean --yes && lerna run clean && rimraf cdn",
    "coverage": "run-p coverage:*",
    "coverage:agent": "codecov -f ./packages/agent/coverage/lcov.info -F agent",
    "examples": "webpack-dev-server --config ./examples/webpack.config.ts",
    "lint": "run-p lint:*",
    "lint:css": "stylelint 'website/static/**/*.{css,scss}'",
    "lint:examples": "tslint -c ./examples/tslint.json 'examples/**/*.ts{,x}'",
    "lint:js": "eslint -c website/.eslintrc.json website",
    "lint:pug": "pug-lint examples/**/*.pug",
    "lint:ts": "tslint 'packages/*/{src,test}/**/*.ts'",
    "postbuild": "cp robots.txt ./cdn",
    "precommit": "lint-staged",
    "publish": "lerna publish --skip-git",
    "start": "concurrently --kill-others 'npm run examples' 'npm run website' 'npm run build:examples -- -w'",
    "test": "lerna run test",
    "website": "cd website && npm start"
  },
  "size-limit": [
    {
      "path": "cdn/agent.js",
      "limit": "8 KB"
    }
  ],
  "workspaces": [
    "packages/*",
    "website",
    "examples/*"
  ]
}
