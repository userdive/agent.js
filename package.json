{
  "private": true,
  "name": "@userdive/userdive-agent",
  "description": "webpage tracking agent",
  "version": "0.11.0",
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/userdive/agent.js/issues"
  },
  "devDependencies": {
    "lerna": "^2.7.1",
    "rimraf": "^2.6.2"
  },
  "engine": {
    "node": "> 5"
  },
  "homepage": "https://github.com/userdive/agent.js#readme",
  "keywords": [
    "userdive"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/userdive/agent.js.git"
  },
  "scripts": {
    "build": "lerna run build",
    "ci:sauce": "cross-env CI_MODE=sauce npm run test",
    "clean": "lerna clean --yes && lerna run clean && rimraf cdn",
    "coverage": "lerna run coverage",
    "lint": "run-p lint:*",
    "lint:ts": "tslint 'packages/*/{src,test}/**/*.ts'",
    "prepare": "lerna run prepare",
    "test": "lerna run test",
    "postbuild": "cp robots.txt ./cdn",
    "precommit": "lint-staged",
    "bump": "lerna publish --skip-npm --skip-git",
    "publish": "lerna publish --skip-git"
  },
  "workspaces": [
    "packages/*"
  ]
}
