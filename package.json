{
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/userdive/agent.js/issues"
  },
  "devDependencies": {
    "@uncovertruth/eslint-config": "^3.3.0",
    "@uncovertruth/tslint-config": "^1.3.0",
    "codecov": "^3.0.0",
    "eslint": "^4.16.0",
    "husky": "^0.14.3",
    "lerna": "^2.7.1",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^4.1.2",
    "prettier-eslint-cli": "^4.7.0",
    "rimraf": "^2.6.2",
    "size-limit": "^0.14.0",
    "tslint": "^5.9.1"
  },
  "engine": {
    "node": "> 5"
  },
  "homepage": "https://github.com/userdive/agent.js#readme",
  "keywords": [
    "userdive"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "cdn/agent.js",
      "limit": "8 KB"
    }
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/userdive/agent.js.git"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:packages": "lerna run build",
    "build:cdn": "webpack --env=production && size-limit",
    "bump": "lerna publish --skip-npm --skip-git",
    "clean": "lerna clean --yes && lerna run clean && rimraf cdn",
    "coverage": "run-p coverage:*",
    "coverage:agent": "codecov -f ./coverage/lcov.info -F agent",
    "lint": "run-p lint:*",
    "lint:ts": "tslint 'packages/*/{src,test}/**/*.ts'",
    "postbuild": "cp robots.txt ./cdn",
    "precommit": "lint-staged",
    "prepare": "lerna run bootstrap",
    "publish": "lerna publish --skip-git",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
